{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Connexion
{% endblock %}

{% block body %}
	<div class="container">
<h5 class="mt-3">Formulaire de connexion</h5>

{% if error %}
<div class="alert alert-dismissible alert-danger mt-3">
    {{ error.messageKey|trans(error.messageData, 'security') }}
</div>
{% endif %}

{% for message in app.flashes('success') %}
  <div class="alert alert-dismissible alert-success mt-4">
  {{ message }}
  </div>
  {% endfor %}

				<form action="{{ path('security.login' )}}" method="post" accept-charset="UTF-8">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="form-group">
						<label for="username" class="form-label mt-3">Adresse email</label>
						<input type="email" class="form-control" id="username"  name="_username" value="{{ lastusername }}" placeholder="exemple@email.com">
					</div>
					<div class="form-group">
						<label for="password" class="form-label mt-3">Mot de passe</label>
						<input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
					</div>
                <button type="submit" class="btn btn-primary mt-3">Connexion</button>
				</form>

				<p class="mt-3">
					<a href="">Mot de passe oubli√©?</a>
				</p>
	</div>
{% endblock %}
